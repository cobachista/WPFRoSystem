        <Grid.RowDefinitions>
            <RowDefinition Height="65*" />
            <RowDefinition Height="61*" />
            <RowDefinition Height="189*" />
            <RowDefinition Height="105*"/>
        </Grid.RowDefinitions>


        <Label Content="Date" FontSize="22" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,264.333,7.333" />
        <TextBox Margin="70,10,18.667,28.333" IsEnabled="False" Padding="4" Grid.Column="0" Grid.Row="0" FontSize="18"/>
