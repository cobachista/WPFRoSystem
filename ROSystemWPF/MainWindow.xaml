<Window x:Class="ROSystemWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ROSystemWPF"
        mc:Ignorable="d"
        Title="RO System" Height="500" Width="1000" WindowStartupLocation="CenterScreen">
    <StackPanel Background="#CCCCCC">
        <Grid Margin="0,0,0.333,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*"  />
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Grid.Row="1" Content="Reports" Width="200" Margin="0,0,100,0"  Height="150" />
            <Button Grid.Column="1" Grid.Row="1" Content="Purchase" Width="200" Margin="0,0,100,0" Height="150"  />
            <Label FontWeight="Black"  Grid.Column="1" FontSize="22" HorizontalAlignment="Center" Content="DashBoard"/>
        </Grid>
    </StackPanel>
</Window>
